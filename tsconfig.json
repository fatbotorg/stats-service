{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@filters/*": ["./src/filters/*"],
      "@health/*": ["./src/modules/health/*"],
      "@interceptors/*": ["./src/interceptors/*"],
      "@logger/*": ["./src/modules/logger/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
